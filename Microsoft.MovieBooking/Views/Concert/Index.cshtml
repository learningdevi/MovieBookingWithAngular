@model List<Microsoft.MovieBooking.Models.ConcertViewModel>
@{
    ViewData["Title"] = "Concert Page";
    var concerts = Model.Count;
}

<div class="container-fluid text-center"> 
    <div class = "row">
        <div class = "col-sm-2 text-center" style = "background-color:white;"> 
            
        </div>
        <div class = "col-sm-10 text-center" style = "background-color:white;"> 
            @if (concerts > 0)
            {
                foreach (var item in Model)
                {
                    var source = "/Content/Image/" + @item.Name?.Split(' ')[0] + ".jpg";
                    <div class = "row">
                        <div class = "col-sm-2" style = "background-color:lightgrey; color: white;">
                            <img src=@source class="img-thumbnail" alt="Movie Photo" />
                        </div>
                        <div class = "col-sm-7" style = "background-color:lightblue; color: black;">
                            <div>
                                @Html.ActionLink(item.Name,"Shows","Theatre",new{item.Id}) 
                            </div>                            
                            <div>
                                @Html.DisplayFor(modelItem => item.ShowDate),
                                @Html.DisplayFor(modelItem => item.ShowTime)
                            </div>
                        </div>
                        <div class="col-sm-1" style="background-color:lightblue;">
                            <button class="btn btn-outline-dark">
                                <img src="/Content/Image/favourite.jpg" class="img-fluid" width="30" height="30"/>
                            </button>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class = "row">
                        <div class = "col-sm-10" style = "background-color:white; color: red;">
                        No movies found
                        </div>
                </div>
            }
        </div>
   </div>
</div>