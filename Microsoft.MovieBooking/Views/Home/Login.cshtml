@{
    var status = ViewBag.RegistrationStatus;
}
<div class="container-fluid text-center"> 
    <div class = "row">
        <div class = "col-sm-2 text-center" style = "background-color:white;"> 
           @Html.ActionLink("<- Home","Movies","Movie")
        </div>
        <div class = "col-sm-10 text-center" style = "background-color:white;"> 
            @if(status!= null && status == true)
            {
               <div> "Registered Successfully!"</div>
            }
        </div>
   </div>
   <div class = "row">
        <div class = "col-sm-2 text-center" style = "background-color:white;"> 
        </div>
        <div class = "col-sm-10 text-center" style = "background-color:white;"> 
          @using(Html.BeginForm("Login","Home","Post")){
            <table>
                <tr>
                    <td>
                        "Mobile / EmailId :"
                    </td>
                    <td>
                        @Html.Editor("Id")
                    </td>
                </tr>
                <tr>
                    <td>
                        "OTP :"
                    </td>
                    <td>
                        @Html.Editor("OTP") 
                    </td>
                </tr>
                <tr>
                    <td>
                        
                    </td>
                    <td>
                        <input type="submit" value="Submit" />  
                    </td>
                </tr>
            </table>
            }
        </div>          
   </div>
   <div class = "row">
        <div class = "col-sm-2 text-center" style = "background-color:white;"> 
            Not Registered ?
        </div>
        <div class = "col-sm-10 text-left" style = "background-color:white;"> 
                       @Html.ActionLink("<- Register","Register","Home")
        </div>
   </div>
</div>